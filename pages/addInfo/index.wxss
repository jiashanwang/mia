.addInfo .title {
    text-align: center;
    color: green;
    margin: 40rpx 10rpx;
}

.addInfo .section {
    display: flex;
    flex-direction: row;
    justify-content: center;
    margin: 30rpx 10rpx;
}

.addInfo .section input {
    border: 1px solid green;
    border-radius: 6px;
    padding: 0 16rpx;
    /* padding:10rpx; */
}

.addInfo .section text {
    margin-right: 20rpx;
    font-size:40rpx;
    display:inline-block;
    vertical-align: middle;
}

.addInfo .btn-area {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.addInfo .btn-area button {
    margin-bottom: 30rpx;
}

