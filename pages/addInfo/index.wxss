.section view {
    width: 150rpx;
    text-align: right;
    margin-right: 20rpx;
}
.addInfo .section input.errorTip {
    border: 0;
    color: #f00;
    font-size: 30rpx;
}
.errorSection{
    margin:0;
}
.section__title{
    height:70rpx;
    line-height:70rpx;
    font-size:40rpx;
}
.section_input{
    height:70rpx;
}
.addInfoHead{
    font-weight:bold;
}

